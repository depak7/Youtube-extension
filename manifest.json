{
    "manifest_version": 3,
    "name": "YouTube Auto Pause",
    "version": "1.0",
    "description": "Automatically pauses YouTube videos when the tab or window changes.",
    "permissions": [
      "tabs",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://www.youtube.com/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "icons": {
      "16": "youtube.png",
      "48": "youtube.png",
      "128": "youtube.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "youtube.png",
        "48": "youtube.png",
        "128": "youtube.png"
      }
    }
  }
  